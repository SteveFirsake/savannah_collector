<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:background="@drawable/diastyle"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<TextView 
    android:id="@+id/mbatxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:text="@string/mbaindi2"
    android:textColor="@color/dialogcomtxt"
    android:textSize="15sp"
    android:textStyle="bold"
    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">
  
  <Button
        android:id="@+id/mbabtn1"
        android:layout_width="100dp"
        android:background="@drawable/bcomlinee"
        android:text="@string/enda" 
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        />
  
 </LinearLayout>
</LinearLayout>
